---
import PostMetadata from './PostMetadata.astro';
import type { PostEntry } from '../registry/getPost';

interface Props extends PostEntry {
	href: string,
}
const { href, title, published, edited, tags, cover, minutesRead } = Astro.props;
---

<a class="no-underline" href={href}>
	<div class="relative w-100% min-h-6rem m-2 p-4 bg-white @dark:bg-#202020 shadow-[0_1px_3px_0_#00000040,_0_1px_2px_-1px_#00000040] hover:shadow-[0_calc(1px_+_0.25rem)_3px_0_#00000040,_0_calc(1px_+_0.25rem)_2px_-1px_#00000040] hover:transform-translate-y--1 motion-safe:transition-[transform,box-shadow] motion-safe:duration-200ms">
		{cover &&
			<img class="absolute right-0 top-0 w-60% h-100% object-cover" src={cover} alt="" />
		}
		<div class="absolute inset-x-0 top-0 h-100% bg-gradient-linear bg-gradient-[to_right,_#d5cafe_50%,_#ffffff80] @dark:bg-gradient-[to_right,_#564a7e_50%,_#20202080] backdrop-blur-2 z-1" />
		<div class="flex flex-col flex-nowrap justify-center items-start relative z-1">
			<span class="block font-heading font-bold text-2rem leading-tight text-#564a7e @dark:text-#d5cafe">
				{title}
			</span>
			<span>
				<PostMetadata
					minutesRead={minutesRead}
					published={published}
					edited={edited}
					tags={tags}
				/>
			</span>
		</div>
	</div>
</a>